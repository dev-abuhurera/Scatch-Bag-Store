<%- include('./partials/header') %> 

<% if(success && success.length > 0) { %>
    <div class="fixed top-5 left-1/2 -translate-x-1/2 p-4 rounded-lg bg-green-500 z-50 shadow-lg">
        <span class="inline-block text-white font-medium"><%= success %></span>
    </div>
<% } %>

<% if(error && error.length > 0) { %>
    <div class="fixed top-5 left-1/2 -translate-x-1/2 p-4 rounded-lg bg-red-500 z-50 shadow-lg">
        <span class="inline-block text-white font-medium"><%= error %></span>
    </div>
<% } %>

<!-- Page Header -->

<div class="container mx-auto">
    <div class="md:text-5xl text-3xl md:px-10 px-5 mt-8 mb-2">Create Product</div>
    <div class="md:px-10 px-5 text-gray-600 text-sm md:text-base mb-6">
        Add a new product to your inventory
    </div>
</div>

<div class="container mx-auto px-4 md:px-8 pb-12 min-h-screen">
    
    <div class="flex flex-col lg:flex-row gap-6">
        
        <!-- Sidebar Navigation -->

        <div class="lg:w-64 w-full flex-shrink-0">
            <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-6 lg:sticky lg:top-8">
                <h3 class="text-lg font-bold text-gray-800 mb-4 flex items-center gap-2">
                    <i class="ri-settings-3-line text-blue-600"></i>
                    Admin Menu
                </h3>
                <div class="space-y-2">
                    <a class="flex items-center gap-3 px-4 py-3 rounded-xl hover:bg-blue-50 hover:text-blue-600 text-gray-700 font-medium transition-all" 
                       href="/owners/admin">
                        <i class="ri-dashboard-line text-lg"></i>
                        All Products
                    </a>
                    <a class="flex items-center gap-3 px-4 py-3 rounded-xl bg-blue-50 text-blue-600 font-semibold transition-all" 
                       href="/owners/admin/create">
                        <i class="ri-add-circle-line text-lg"></i>
                        Create Product
                    </a>
                </div>
            </div>
        </div>

        <!-- Main Form Area -->

        <div class="flex-1">
            <div class="bg-white rounded-2xl shadow-lg border border-gray-200 p-6 md:p-8">
                
                <div class="flex items-center gap-3 mb-6">
                    <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center">
                        <i class="ri-add-box-line text-2xl text-blue-600"></i>
                    </div>
                    <div>
                        <h2 class="text-2xl font-bold text-gray-800">New Product</h2>
                        <p class="text-sm text-gray-600">Fill in the details below</p>
                    </div>
                </div>

                <form action="/products/create" method="post" enctype="multipart/form-data" class="space-y-6">
                    
                    <!-- Product Details Section -->

                    <div class="bg-gradient-to-br from-gray-50 to-gray-100 rounded-xl p-6 border border-gray-200">
                        <h3 class="text-lg font-bold text-gray-800 mb-4 flex items-center gap-2">
                            <i class="ri-information-line text-blue-600"></i>
                            Product Details
                        </h3>
                        
                        <!-- Image Upload -->

                        <div class="mb-6">
                            <label class="block mb-2 font-semibold text-gray-700 text-sm">
                                <i class="ri-image-line mr-1"></i>Product Image *
                            </label>
                            <div class="relative">
                                <input name="image" 
                                       type="file" 
                                       accept="image/*"
                                       required
                                       class="w-full px-4 py-3 border-2 border-gray-300 rounded-xl focus:border-blue-500 focus:ring-4 focus:ring-blue-100 outline-none transition-all bg-white file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:bg-blue-50 file:text-blue-600 file:font-semibold hover:file:bg-blue-100 cursor-pointer" />
                            </div>
                            <p class="text-xs text-gray-500 mt-2">Supported formats: JPG, PNG, GIF (Max 5MB)</p>
                        </div>

                        <!-- Product Info Grid -->

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div>
                                <label class="block mb-2 font-semibold text-gray-700 text-sm">
                                    Product Name *
                                </label>
                                <input name="name" 
                                       type="text" 
                                       placeholder="e.g., Leather Handbag"
                                       required
                                       class="w-full px-4 py-3 border-2 border-gray-300 rounded-xl focus:border-blue-500 focus:ring-4 focus:ring-blue-100 outline-none transition-all bg-white" />
                            </div>

                            <div>
                                <label class="block mb-2 font-semibold text-gray-700 text-sm">
                                    Price (₹) *
                                </label>
                                <input name="price" 
                                       type="number" 
                                       placeholder="e.g., 1200"
                                       min="0"
                                       required
                                       class="w-full px-4 py-3 border-2 border-gray-300 rounded-xl focus:border-blue-500 focus:ring-4 focus:ring-blue-100 outline-none transition-all bg-white" />
                            </div>

                            <div>
                                <label class="block mb-2 font-semibold text-gray-700 text-sm">
                                    Discount (₹)
                                </label>
                                <input name="discount" 
                                       type="number" 
                                       placeholder="e.g., 100"
                                       min="0"
                                       class="w-full px-4 py-3 border-2 border-gray-300 rounded-xl focus:border-blue-500 focus:ring-4 focus:ring-blue-100 outline-none transition-all bg-white" />
                            </div>
                        </div>
                    </div>

                    <!-- Styling Section -->

                    <div class="bg-gradient-to-br from-purple-50 to-pink-50 rounded-xl p-6 border border-purple-200">
                        <h3 class="text-lg font-bold text-gray-800 mb-4 flex items-center gap-2">
                            <i class="ri-palette-line text-purple-600"></i>
                            Styling & Colors
                        </h3>
                        
                        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                            <div>
                                <label class="block mb-2 font-semibold text-gray-700 text-sm">
                                    Background Color
                                </label>
                                <div class="flex gap-2">
                                    <input name="bgcolor" 
                                           type="color" 
                                           class="w-14 h-12 rounded-lg cursor-pointer border-2 border-gray-300" />
                                    <input name="bgcolor" 
                                           type="text" 
                                           placeholder="#FFFFFF"
                                           pattern="^#[0-9A-Fa-f]{6}$"
                                           class="flex-1 px-4 py-3 border-2 border-gray-300 rounded-xl focus:border-purple-500 focus:ring-4 focus:ring-purple-100 outline-none transition-all bg-white" />
                                </div>
                            </div>

                            <div>
                                <label class="block mb-2 font-semibold text-gray-700 text-sm">
                                    Panel Color
                                </label>
                                <div class="flex gap-2">
                                    <input name="panelcolor" 
                                           type="color" 
                                           class="w-14 h-12 rounded-lg cursor-pointer border-2 border-gray-300" />
                                    <input name="panelcolor" 
                                           type="text" 
                                           placeholder="#000000"
                                           pattern="^#[0-9A-Fa-f]{6}$"
                                           class="flex-1 px-4 py-3 border-2 border-gray-300 rounded-xl focus:border-purple-500 focus:ring-4 focus:ring-purple-100 outline-none transition-all bg-white" />
                                </div>
                            </div>

                            <div>
                                <label class="block mb-2 font-semibold text-gray-700 text-sm">
                                    Text Color
                                </label>
                                <div class="flex gap-2">
                                    <input name="textcolor" 
                                           type="color" 
                                           class="w-14 h-12 rounded-lg cursor-pointer border-2 border-gray-300" />
                                    <input name="textcolor" 
                                           type="text" 
                                           placeholder="#FFFFFF"
                                           pattern="^#[0-9A-Fa-f]{6}$"
                                           class="flex-1 px-4 py-3 border-2 border-gray-300 rounded-xl focus:border-purple-500 focus:ring-4 focus:ring-purple-100 outline-none transition-all bg-white" />
                                </div>
                            </div>
                        </div>
                        
                        <p class="text-xs text-gray-600 mt-4">
                            <i class="ri-lightbulb-line mr-1"></i>
                            Tip: Use the color pickers or enter hex codes manually (e.g., #FF5733)
                        </p>
                    </div>

                    <!-- Action Buttons -->
                     
                    <div class="flex flex-col sm:flex-row gap-3 pt-4">
                        <button type="submit" 
                                class="flex-1 sm:flex-initial px-8 py-4 bg-blue-600 text-white rounded-xl font-semibold text-lg hover:bg-blue-700 transition-all shadow-lg hover:shadow-xl flex items-center justify-center gap-2">
                            <i class="ri-add-line text-xl"></i>
                            Create Product
                        </button>
                        <a href="/owners/admin" 
                           class="flex-1 sm:flex-initial px-8 py-4 bg-gray-200 text-gray-700 rounded-xl font-semibold text-lg hover:bg-gray-300 transition-all flex items-center justify-center gap-2">
                            <i class="ri-close-line text-xl"></i>
                            Cancel
                        </a>
                    </div>
                </form>

            </div>
        </div>
        
    </div>
</div>

<%- include('./partials/footer') %>