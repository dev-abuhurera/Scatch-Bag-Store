<%- include('./partials/header') %>

<% if(success && success.length > 0) { %>
    <div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-green-500 z-50">
        <span class="inline-block mt-1 mb-1 text-white"><%= success %></span>
    </div>
<% } %>

<% if(error && error.length > 0) { %>
    <div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-red-500 z-50">
        <span class="inline-block mt-1 mb-1 text-white"><%= error %></span>
    </div>
<% } %>

<% if(cartWithQuantities && cartWithQuantities.length > 0) { %>
    
    <!-- Show all cart items -->
    <div class="w-full min-h-screen px-20 py-10">
        <div class="space-y-6 mb-10">
            
            <% cartWithQuantities.forEach(function (item) { %>

                <div class="w-full flex items-start gap-10 border-2 rounded-lg p-6">
                    <div class="w-[30%] rounded-md overflow-hidden">

                        <div class="w-full h-80 flex items-center justify-center style=" style= "background-color: <%= item.bgcolor %>;">
                            <img class="h-full w-full object-contain" src="data:image/jpeg;base64, <%= item.image.toString('base64')%>" alt="">
                        </div>
                        <div class="w-full flex justify-between px-5 py-4" style="background-color: <%= item.panelcolor %>;">
                            <h3 class="text-2xl"><%= item.name %></h3>
                            <div class="flex items-center gap-2">
                                <!-- Add button -->

                                <form action="/cart/add/<%= item._id %>" method="POST" class="inline">
                                    <button type="submit" class="w-7 h-7 bg-white flex rounded-full items-center justify-center hover:bg-gray-100 transition-colors cursor-pointer">
                                        
                                        <i class="ri-add-line"></i>

                                    </button>
                                </form>

                                <!-- Quantity -->
                                <div class="px-2 py-1 rounded-md bg-white text-black"><%= item.quantity %></div>
                                <!-- Remove button -->
                                <form action="/cart/remove/<%= item._id %>" method="POST" class="inline">
                                    <button type="submit" class="w-7 h-7 bg-white flex rounded-full items-center justify-center hover:bg-gray-100 transition-colors cursor-pointer">
                                        <i class="ri-subtract-line"></i>
                                    </button>
                                </form>
                            </div>
                        </div>

                        <div class="text-white flex items-center justify-between px-5 py-3 bg-[<%= item.textcolor %>]">
                            <h4 class="text-lg">Item Price</h4>
                            <h2 class="text-lg">₹ <%= Number(item.price) - Number(item.discount || 0) %></h2>
                        </div>

                    </div>
                    <div class="w-[70%]">
                        <h3 class="text-xl mb-4">Price Breakdown</h3>
                        <div class="px-10 mt-5">
                            <div class="flex mt-2">
                                <h4 class="w-1/3">Item MRP</h4>
                                <h4>₹ <%= item.price %></h4>
                            </div>
                            <div class="flex mt-2">
                                <h4 class="w-1/3">Discount</h4>
                                <h4>₹ <%= Number(item.discount || 0) %></h4>
                            </div>
                            <div class="flex mt-2">
                                <h4 class="w-1/3">Quantity</h4>
                                <h4><%= item.quantity %></h4>
                            </div>
                            <div class="flex mt-2">
                                <h4 class="w-1/3">Item Total</h4>
                                <h4 class="font-semibold">₹ <%= (Number(item.price) - Number(item.discount || 0)) * item.quantity %></h4>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>

        <div class="w-full border-t-2 border-gray-300 pt-6">
            
            <div class="max-w-2xl ml-auto">
                <h3 class="text-2xl mb-4">Order Summary</h3>
                <div class="space-y-3">
                    <div class="flex justify-between">
                        <h4>Subtotal (<%= cartWithQuantities.reduce((sum, item) => sum + item.quantity, 0) %> items)</h4>
                        <h4>₹ <%= cartWithQuantities.reduce((total, item) => total + (Number(item.price) - Number(item.discount || 0)) * item.quantity, 0) %></h4>
                    </div>
                    <div class="flex justify-between">
                        <h4>Platform Fee</h4>
                        <h4>₹ 20</h4>
                    </div>
                    <div class="flex justify-between">
                        <h4>Shipping Fee</h4>
                        <h4>FREE</h4>
                    </div>
                    <div class="w-full h-[1px] bg-black mt-4"></div>
                    <div class="flex justify-between mt-4">
                        <h3 class="text-xl font-semibold">Total Amount</h3>
                        <h3 class="font-semibold text-xl text-green-600">₹ <%= bill %></h3>
                    </div>
                </div>

                <form action="/placeorder" method="post" class="mt-6">
                    <button class="w-full px-5 rounded-full py-3 bg-blue-500 text-white hover:bg-blue-600 transition-colors" type="submit">
                        Place Order
                    </button>
                </form>

            </div>

        </div>
    </div>
<% } else { %>

    <div class="w-full h-screen flex items-center justify-center">
        <div class="text-center">
            <h2 class="text-3xl font-semibold mb-4">Your cart is empty</h2>
            <p class="text-gray-600 mb-6">Nothing in the cart yet</p>
            <a href="/shop" class="px-6 py-3 bg-blue-500 text-white rounded-md hover:bg-blue-600 transition-colors">
                Continue Shopping
            </a>
        </div>
    </div>

<% } %>
    
<%- include('./partials/footer') %>