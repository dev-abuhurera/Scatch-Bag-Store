<%- include('./partials/header') %>


<% if(success && success.length > 0)  
{ %>
    <div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-blue-500">
        <span class="inline-block mt-1 mb-1 text-white"> <%= success %> </span>
    </div>
<% } %>


<% if(error && error.length > 0)  
{ %>
    <div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-red-500">
        <span class="inline-block mt-1 mb-1 text-white"> <%= error %> </span>
    </div>
<% } %>

<div class="w-full h-screen flex items-start px-20 py-20">
        <div class="w-[25%] flex h-screen flex-col items-start">
            <div class="flex flex-col gap-3">
                
                <a class="block w-fit mb-2" href="/owners/admin">
                    All Products
                </a>
                <a class="block w-fit mb-2" href="/owners/admin/create">
                    Create new product
                </a>

            </div>
        </div>
        <div class="w-[75%] flex flex-col gap-5 h-screen">
            <% if(products && products.length > 0) { %>
                <form action="/products/deleteall" method="post">
                    <button type="submit" class="text-red-500 hover:text-red-700">Delete all</button>
                </form>
            <% } %>
           
            <div class="flex flex-wrap items-start gap-5 overflow-y-auto">
                <% products.forEach(product => { %>
                <div class="w-60 bg-white shadow-md overflow-hidden">
                    <div class="w-full h-1/4 flex items-center justify-center bg-[<%= product.bgcolor %>]">
                    <img class="w-full h-40 flex object-contain" src="data:image/png;base64,<%= product.image.toString('base64') %>" alt="<%= product.name %>">
                </div>
                    <div class="flex justify-between bg-[<%= product.panelcolor %>] items-center px-4 py-4 text-[<%= product.textcolor %>]">
                        <div>
                            <h3><%= product.name %></h3>
                            <h4>â‚¹<%= product.price %></h4>
                        </div>
                        <form action="/products/delete/<%= product._id %>" method="post">
                            <button type="submit" class="w-7 h-7 flex items-center justify-center rounded-full bg-zinc-200" onclick="return confirm('Are you sure you want to delete this product?')">
                                <i class="ri-delete-bin-line"></i>
                            </button>
                        </form>
                    </div>
                </div>
                <% }) %>
                
            </div>
        </div>
    </div>
    <%- include('./partials/footer') %>
</body>
</html>
                