<%- include('./partials/header') %>

<% if(success && success.length > 0) { %>
    <div class="fixed top-5 left-1/2 -translate-x-1/2 p-4 rounded-lg bg-green-500 z-50 shadow-lg">
        <span class="inline-block text-white font-medium"><%= success %></span>
    </div>
<% } %>

<% if(error && error.length > 0) { %>
    <div class="fixed top-5 left-1/2 -translate-x-1/2 p-4 rounded-lg bg-red-500 z-50 shadow-lg">
        <span class="inline-block text-white font-medium"><%= error %></span>
    </div>
<% } %>

<!-- Page Header -->
<div class="container mx-auto">
    <div class="md:text-5xl text-3xl  md:px-10 px-5 mt-8 mb-2">Admin Dashboard</div>
    <div class="md:px-10 px-5 text-gray-600 text-sm md:text-base mb-6">
        Manage your products and inventory
    </div>
</div>

<div class="container mx-auto px-4 md:px-8 pb-12 min-h-screen">
    
    <div class="flex flex-col lg:flex-row gap-6">
        
        <!-- Sidebar Navigation -->
        <div class="lg:w-64 w-full flex-shrink-0">
            <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-6 lg:sticky lg:top-8">
                <h3 class="text-lg font-bold text-gray-800 mb-4 flex items-center gap-2">
                    <i class="ri-settings-3-line text-blue-600"></i>
                    Admin Menu
                </h3>
                <div class="space-y-2">
                    <a class="flex items-center gap-3 px-4 py-3 rounded-xl bg-blue-50 text-blue-600 font-semibold transition-all" 
                       href="/owners/admin">
                        <i class="ri-dashboard-line text-lg"></i>
                        All Products
                    </a>
                    <a class="flex items-center gap-3 px-4 py-3 rounded-xl hover:bg-blue-50 hover:text-blue-600 text-gray-700 font-medium transition-all" 
                       href="/owners/admin/create">
                        <i class="ri-add-circle-line text-lg"></i>
                        Create Product
                    </a>
                </div>
            </div>
        </div>

        <!-- Main Content Area -->
        <div class="flex-1">
            <!-- Products Header with Actions -->

            <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4 mb-6">
                
                <div>
                    <h2 class="text-2xl font-bold text-gray-800">Products</h2>
                    <p class="text-sm text-gray-600 mt-1">
                        Total: <span><%= products.length %></span> products
                    </p>

                </div>
                
                <% if(products && products.length > 0) { %>
                    
                    <form action="/products/deleteall" method="post" onsubmit="return confirm('Are you sure you want to delete ALL products? This cannot be undone!')">
                        
                        <button type="submit" 
                                class="flex items-center gap-2 px-5 py-2.5 bg-red-500 text-white rounded-xl font-semibold hover:bg-red-600 transition-all shadow-md hover:shadow-lg">
                            <i class="ri-delete-bin-line"></i>
                            Delete All
                        </button>

                    </form>
                <% } %>
            </div>

            <!-- Products Grid -->
            <% if(products && products.length > 0) { %>

                <div class="bg-gradient-to-br from-gray-50 to-gray-100 p-4 md:p-6 rounded-2xl border  shadow-sm">

                    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4 md:gap-5 ">
                        
                        <% products.forEach(product => { %>

                            <div class="rounded-xl overflow-hidden shadow-md relative"> <!-- relative for absolute positioning -->

                                <!-- Product Image Background -->
                                <div class="w-full h-48 flex items-center justify-center p-4"
                                     style="background: linear-gradient(to right, <%= product.bgcolor.join(', ') %>)">
                                    <img class="max-w-full max-h-full object-contain" 
                                         src="<%= product.image %>" 
                                         alt="<%= product.name %>">
                                </div>
                            
                                <!-- Product Info Panel -->
                                <div class="flex flex-col justify-between px-4 py-3"
                                     style="background: linear-gradient(to right, <%= product.panelcolor.join(', ') %>); color: <%= product.textcolor[0] %>;">
                                    
                                    <!-- Name & Price -->
                                    <div class="flex-1 relative">
                                        <h3 class="text-base font-semibold truncate"><%= product.name %></h3>
                                        <h4 class="text-lg mt-1">₹<%= product.price %></h4>
                                        
                                        <% if(product.discount && product.discount > 0) { %>
                                            <p class="text-xs opacity-80 mt-1">Discount: ₹<%= product.discount %></p>
                                        <% } %>
                                    </div>
                            
                                    <!-- Delete Button in Bottom-Right -->
                                    <form action="/products/delete/<%= product._id %>" method="post">
                                        <button type="submit" 
                                                class="w-9 h-9 flex items-center justify-center rounded-full bg-white hover:bg-red-500 hover:text-white transition-all shadow-md" 
                                                onclick="return confirm('Delete <%= product.name %>?')">
                                            <i class="ri-delete-bin-line text-lg text-red-500 group-hover:text-white"></i>
                                        </button>
                                    </form>
                            
                                </div>
                            </div>
                        <% }) %>
                        
                    </div>
                </div>

            <% } else { %>
                
                <!-- Empty State -->

                <div class="flex flex-col items-center justify-center py-20 md:py-32 bg-white rounded-2xl shadow-md border border-gray-200">
                    
                    <div class="w-32 h-32 md:w-48 md:h-48 mb-6 md:mb-8 bg-gradient-to-br from-blue-50 to-blue-100 rounded-full flex items-center justify-center">
                        <i class="ri-inbox-line text-6xl md:text-8xl text-blue-400"></i>
                    </div>

                    <h3 class="text-2xl md:text-4xl font-bold text-gray-800 mb-3 md:mb-4">No Products Yet</h3>
                    <p class="text-sm md:text-lg text-gray-600 mb-6 md:mb-8 text-center px-4">
                        Start by creating your first product
                    </p>

                    <a href="/owners/admin/create" 
                       class="inline-flex items-center gap-2 px-6 md:px-8 py-3 md:py-4 bg-blue-600 text-white rounded-xl font-semibold hover:bg-blue-700 transition-all shadow-lg hover:shadow-xl">
                        <i class="ri-add-line text-xl"></i>
                        Create Product
                    </a>

                </div>
                
            <% } %>
        </div>
        
    </div>
</div>

<%- include('./partials/footer') %>