<%- include('./partials/header') %>

<% if(success) { %>
    <div class="fixed top-5 left-1/2 -translate-x-1/2 p-4 rounded-lg bg-blue-500 z-50 shadow-lg">
        <span class="inline-block text-white font-medium"><%= success %></span>
    </div>
<% } %>

<% if(error && error.length > 0) { %>
    <div class="fixed top-5 left-1/2 -translate-x-1/2 p-4 rounded-lg bg-red-500 z-50 shadow-lg">
        <span class="inline-block text-white font-medium"><%= error %></span>
    </div>
<% } %>

<div class="container mx-auto px-4 md:px-8 py-6 min-h-screen">
  
    <!-- Page Header -->
    <div class="mb-6 md:mb-8">
        <h1 class="text-3xl md:text-5xl text-gray-800 mb-2">My Orders</h1>
        <p class="text-sm md:text-base text-gray-600">Track and manage your orders</p>
    </div>

    <% if(orders && orders.length > 0) { %>
        
        <div class="space-y-4 md:space-y-5">
            <% orders.forEach(order => { %>

                <div class="bg-white border border-gray-200 rounded-xl p-4 md:p-6 shadow-md hover:shadow-xl transition-all">
                    
                    <!-- Order Header -->
                    <div class="flex flex-col md:flex-row md:justify-between md:items-start gap-3 mb-4 pb-4 border-b border-gray-200">
                        <div class="flex-1">
                            <h3 class="text-lg md:text-xl font-bold text-gray-800">
                                Order #<%= order._id.toString().slice(-8).toUpperCase() %>
                            </h3>
                            <p class="text-gray-600 text-xs md:text-sm mt-1">
                                <i class="ri-calendar-line mr-1"></i>
                                <%= new Date(order.orderDate).toLocaleDateString('en-IN', { 
                                    year: 'numeric', 
                                    month: 'long', 
                                    day: 'numeric',
                                    hour: '2-digit',
                                    minute: '2-digit'
                                }) %>
                            </p>
                        </div>
                        
                        <div class="flex md:flex-col items-center md:items-end gap-2 md:gap-3">
                            <span class="px-3 py-1.5 rounded-full text-xs md:text-sm font-semibold whitespace-nowrap
                                <%= order.status === 'pending' ? 'bg-yellow-100 text-yellow-700 border border-yellow-300' : 
                                    order.status === 'confirmed' ? 'bg-blue-100 text-blue-700 border border-blue-300' :
                                    order.status === 'shipped' ? 'bg-purple-100 text-purple-700 border border-purple-300' :
                                    order.status === 'delivered' ? 'bg-green-100 text-green-700 border border-green-300' :
                                    'bg-red-100 text-red-700 border border-red-300' %>">
                                <%= order.status.charAt(0).toUpperCase() + order.status.slice(1) %>
                            </span>
                            <p class="text-xl md:text-2xl font-bold text-green-600">
                                ₹ <%= order.totalAmount.toLocaleString('en-IN') %>
                            </p>
                        </div>
                    </div>

                    <!-- Order Items -->
                    <div class="mb-4">
                        <h4 class="font-semibold text-base md:text-lg mb-3 text-gray-800 flex items-center gap-2">
                            <i class="ri-shopping-bag-line"></i>
                            Order Items
                        </h4>
                        <div class="space-y-2 md:space-y-3">
                            <% order.items.forEach(item => { %>
                                <div class="flex justify-between items-start gap-3 py-3 px-3 md:px-4 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors">
                                    <div class="flex-1 min-w-0">
                                        <p class="font-semibold text-sm md:text-base text-gray-800 truncate"><%= item.name %></p>
                                        <div class="flex flex-wrap items-center gap-2 md:gap-3 mt-1 text-xs md:text-sm text-gray-600">
                                            <span class="flex items-center gap-1">
                                                <i class="ri-close-line"></i><%= item.quantity %>
                                            </span>
                                            <span class="text-gray-400">•</span>
                                            <span>₹<%= item.price.toLocaleString('en-IN') %> each</span>
                                            <% if(item.discount > 0) { %>
                                                <span class="text-green-600 font-medium">
                                                    <i class="ri-discount-percent-line"></i>₹<%= item.discount %> off
                                                </span>
                                            <% } %>
                                        </div>
                                    </div>
                                    <div class="text-right flex-shrink-0">
                                        <p class="font-bold text-sm md:text-lg text-gray-800">
                                            ₹ <%= ((item.total || (item.price - (item.discount || 0))) * (item.quantity || 1)).toLocaleString('en-IN') %>
                                        </p>
                                    </div>
                                </div>
                            <% }) %>
                        </div>
                    </div>

                    <!-- Order Summary -->
                    <div class="mt-4 pt-4 border-t border-gray-200 flex flex-col md:flex-row justify-between items-start md:items-center gap-3">
                        <div class="flex items-center gap-4 text-sm text-gray-600">
                            <div class="flex items-center gap-2">
                                <i class="ri-list-check text-base"></i>
                                <span><%= order.items.reduce((sum, item) => sum + (item.quantity || 1), 0) %> items</span>
                            </div>
                            <% if(order.deliveryDate) { %>
                                <div class="flex items-center gap-2">
                                    <i class="ri-truck-line text-base"></i>
                                    <span>Delivery: <%= new Date(order.deliveryDate).toLocaleDateString('en-IN') %></span>
                                </div>
                            <% } %>
                        </div>
                        <div class="text-left md:text-right">
                            <p class="text-xs md:text-sm text-gray-600 mb-1">Total Amount</p>
                            <p class="text-2xl md:text-3xl font-bold text-green-600">₹ <%= order.totalAmount.toLocaleString('en-IN') %></p>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
        
    <% } else { %>
        
        <!-- Empty State -->
        <div class="flex flex-col items-center justify-center py-20 md:py-32 bg-white rounded-2xl shadow-md border border-gray-200">
            <div class="w-32 h-32 md:w-48 md:h-48 mb-6 md:mb-8 bg-gradient-to-br from-blue-50 to-blue-100 rounded-full flex items-center justify-center">
                <i class="ri-shopping-bag-line text-6xl md:text-8xl text-blue-400"></i>
            </div>
            <h2 class="text-2xl md:text-4xl font-bold text-gray-800 mb-3 md:mb-4">No Orders Yet</h2>
            <p class="text-sm md:text-lg text-gray-600 mb-6 md:mb-8 text-center px-4">You haven't placed any orders. Start shopping to see your orders here!</p>
            <a href="/shop" class="inline-flex items-center gap-2 px-6 md:px-8 py-3 md:py-4 bg-blue-600 text-white text-sm md:text-base rounded-xl font-semibold hover:bg-blue-700 transition-all shadow-lg hover:shadow-xl">
                <i class="ri-shopping-cart-line text-lg"></i>
                Start Shopping
            </a>
        </div>
    <% } %>

</div>

<%- include('./partials/footer') %>