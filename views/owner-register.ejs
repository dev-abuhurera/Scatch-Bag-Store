<%- include('./partials/header') %>

<% if(error && error.length > 0) { %>
    <div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-red-500 z-50">
        <span class="inline-block mt-1 mb-1 text-white"><%= error %></span>
    </div>
<% } %>

<% if(success && success.length > 0) { %>
    <div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-green-500 z-50"> 
        <span class="inline-block mt-1 mb-1 text-white"><%= success %></span>
    </div>
<% } %>

<div class="w-full min-h-screen flex md:px-20 px-4">

    <div class="md:w-1/2 w-full flex items-center  justify-center min-h-screen py-8">

        <div class="w-full md:px-32 px-10">

            <h4 class="text-2xl capitalize mb-5">Create Admin Account</h4>
            <form action="/owners/register" method="post">
                <input class="block bg-zinc-100 w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200"
                    type="text" placeholder="Full Name" name="fullname" required>
                <input class="block bg-zinc-100 w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200"
                    type="email" placeholder="Email" name="email" required>
                <input class="block bg-zinc-100 w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200"
                    type="password" placeholder="Password" name="password" required>
                <input class="px-5 rounded-full py-3 mt-2 md:w-auto bg-blue-500 text-white hover:bg-blue-600 cursor-pointer" type="submit" value="Create Account">
            </form>
            <p class="mt-4 text-sm text-gray-600">
                Already have an account? <a href="/owners/login" class="text-blue-500 hover:underline">Login here</a>
            </p>
        </div>
    </div>

</div>

<%- include('./partials/footer') %>