
<%- include('./partials/header') %>

<div class="min-h-screen bg-white py-8">

    <div class="max-w-4xl mx-auto px-4">

        <!-- Flash Messages -->

        <% if( success && success.length > 0){ %>
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
                <%= success %>
            </div>
        <% } %>

        <% if( error && error.length > 0){ %>
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
                <%= error %>
            </div>
        <% } %>

        <!-- Account Header -->

        <div class="bg-white-400 rounded-lg shadow-md p-6 mb-6">
            <h1 class="text-2xl font-bold text-gray-600 mb-2 mt-4">My Account</h1>
            <p class="text-gray-600">Manage your profile and account settings</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">

            <!-- Profile picture session -->

            <div class="md:col-span-1">
                <div class="bg-white rounded-lg shadow-md p-6">
                    <h2 class="text-xl font-semibold mb-4">Profile Picture</h2>
                    <div class="flex flex-col items-center">

                        <img src="<%= user.picture || '/images/1bag.png'%>" alt="Profile Picture"class="w-40 h-40 rounded bg-red-200 object-cover border-4 border-gray-200 mb-2">

                        <form action="/account/update-profile" method="POST" enctype="multipart/form-data" class="w-full">

                            <div class="mb-4">
                                <label class="block text-sm font-semibold text-gray-600 mb-4">
                                    Change Picture
                                </label>
                                <input type="file" name="picture" accept="image/*" class="w-full rounded text-sm text-gray-500 file:mr-4 file:px-4 file:py-2 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100" required>
                            </div>

                            <div class="flex items-center justify-center"> 

                                <button class="text-white bg-blue-500 py-2 px-4 rounded-lg hover:bg-blue-700 transition " type="submit">
                                    Upload Picture
                                </button>

                            </div>
                        </form>       
                    </div>
                </div>
            </div>

         <!-- Account Information Section -->
      <div class="md:col-span-2">
        <div class="bg-white rounded-lg shadow-md p-6 mt-4">
          <h2 class="text-xl font-semibold mb-4">Account Information</h2>
          
          <form action="/account/update" method="POST">
            
            <!-- Full Name -->
            <div class="mb-4">
              <label for="fullname" class="block text-sm font-medium text-gray-700 mb-2">
                Full Name *
              </label>
              <input 
                type="text" 
                id="fullname" 
                name="fullname" 
                value="<%= user.fullname %>"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                required
              >
            </div>

            <!-- Email (Read-only) -->
            <div class="mb-4">
              <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                Email Address
              </label>
              <input 
                type="email" 
                id="email" 
                value="<%= user.email %>"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg bg-gray-100 cursor-not-allowed"
                disabled
              >
              <p class="text-xs text-gray-500 mt-1">Email cannot be changed</p>
            </div>

            <!-- Contact -->
            <div class="mb-4">
              <label for="contact" class="block text-sm font-medium text-gray-700 mb-2">
                Contact Number
              </label>
              <input 
                type="text" 
                id="contact" 
                name="contact" 
                value="<%= user.contact || '' %>"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                placeholder="+1 (555) 123-4567"
              >
            </div>

            <!-- Address Section -->
            <div class="border-t pt-4 mt-6">
              <h3 class="text-lg font-semibold mb-4 text-gray-800">Address Details</h3>
              
              <!-- Street -->
              <div class="mb-4">
                <label for="street" class="block text-sm font-medium text-gray-700 mb-2">
                  Street Address
                </label>
                <input 
                  type="text" 
                  id="street" 
                  name="street" 
                  value="<%= user.address ? user.address.street : '' %>"
                  class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                  placeholder="123 Main Street"
                >
              </div>

              <!-- City and State -->
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                <div>
                  <label for="city" class="block text-sm font-medium text-gray-700 mb-2">
                    City
                  </label>
                  <input 
                    type="text" 
                    id="city" 
                    name="city" 
                    value="<%= user.address ? user.address.city : '' %>"
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                    placeholder="New York"
                  >
                </div>
                <div>
                  <label for="state" class="block text-sm font-medium text-gray-700 mb-2">
                    State/Province
                  </label>
                  <input 
                    type="text" 
                    id="state" 
                    name="state" 
                    value="<%= user.address ? user.address.state : '' %>"
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                    placeholder="NY"
                  >
                </div>
              </div>

              <!-- Zip Code and Country -->
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                <div>
                  <label for="zipCode" class="block text-sm font-medium text-gray-700 mb-2">
                    Zip/Postal Code
                  </label>
                  <input 
                    type="text" 
                    id="zipCode" 
                    name="zipCode" 
                    value="<%= user.address ? user.address.zipCode : '' %>"
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                    placeholder="10001"
                  >
                </div>
                <div>
                  <label for="country" class="block text-sm font-medium text-gray-700 mb-2">
                    Country
                  </label>
                  <input 
                    type="text" 
                    id="country" 
                    name="country" 
                    value="<%= user.address ? user.address.country : '' %>"
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                    placeholder="United States"
                  >
                </div>
              </div>
            </div>

            <!-- Submit Button -->
            <div class="mt-6 justify-center flex ">
                <button type="submit" class=" bg-blue-600 text-black py-3 px-4 rounded-lg hover:bg-blue-700 transition font-semibold">
                  Save Changes
                </button>
              </div>
            
          </form>
        </div>
      </div>
    </div>


    <!-- Account Stats -->

    <div class="bg-white rounded-lg shadow-md p-6 mt-4">
      <h2 class="text-xl font-semibold mb-4">Account Statistics</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div class="text-center p-4 bg-blue-50 rounded-lg">
          <p class="text-3xl font-bold text-blue-600"><%= user.orders ? user.orders.length : 0 %></p>
          <p class="text-gray-600 mt-1">Total Orders</p>
        </div>
        <div class="text-center p-4 bg-green-50 rounded-lg">
          <p class="text-3xl font-bold text-green-600"><%= user.cart ? user.cart.length : 0 %></p>
          <p class="text-gray-600 mt-1">Items in Cart</p>
        </div>
      </div>
    </div>

    

  </div>
</div>

<%- include('./partials/footer') %>